apiVersion: v1
kind: Secret
metadata:
  name: {{ include "helm-chart-mssql.fullname" . }}
stringData:
  SQLPAD_ADMIN: {{ required ".Values.sqlpad.admin required" .Values.sqlpad.admin }}
  SQLPAD_ADMIN_PASSWORD: {{ required ".Values.sqlpad.pid required" .Values.mssql.pid }}  
  MSSQL_SA_PASSWORD: {{ required ".Values.mssql.saPassword required" .Values.mssql.saPassword }}  
  TZ: {{ .Values.mssql.timezone }}